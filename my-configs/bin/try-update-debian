#! /bin/sh

# Use in anacron: 
# run: `sudo vi /etc/anacrontab`
# add:
# 15	5	pkg-update	runuser -u {user} /home/{user}/bin/try-update

export DISPLAY=:0

zenity --width 250 --question --text="Â¿Desea intentar actualizar su sistema?"

if [ $? -eq 1 ]; then
  exit 0
fi

SCRIPT=$(cat <<EOF 
sudo apt update && 
sudo apt upgrade && 
zenity --width 120 --info --text "Proceso finalizado"
EOF
)

x-terminal-emulator -e "$SCRIPT"

